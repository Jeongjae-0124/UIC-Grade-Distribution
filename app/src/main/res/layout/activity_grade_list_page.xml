<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradeListPage">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/searchResult_rcv"
        android:layout_below="@id/result_explain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/yearResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year result"
        android:textSize="20dp" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/courseResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/yearResult"
        android:text="course Result"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/result_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yearResult"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Select one of the following classes"
        android:textSize="20dp" />


</RelativeLayout>